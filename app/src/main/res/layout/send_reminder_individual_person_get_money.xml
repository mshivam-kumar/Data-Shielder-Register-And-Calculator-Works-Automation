<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="#FFFFFF">    <Button        android:id="@+id/updateCustPhoneNumberBtn"        android:layout_width="230dp"        android:layout_height="wrap_content"        android:layout_marginTop="230dp"        android:background="@drawable/inside_button_shape_management"        android:text="Update Phone Number"        android:textColor="#E8D9D9"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintHorizontal_bias="0.5"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent" />    <androidx.appcompat.widget.Toolbar        android:id="@+id/toolbar"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="@color/purple_200"        android:theme="@style/Theme.SQLiteDb"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent"        tools:ignore="MissingConstraints">        <TextView            android:id="@+id/appName"            android:layout_width="wrap_content"            android:layout_height="match_parent"            android:paddingStart="0dp"            android:text="@string/app_name"            android:textSize="22sp"            android:theme="@style/Theme.SQLiteDb">        </TextView>        <ImageView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:src="@drawable/ic_logo"            android:theme="@style/Theme.SQLiteDb"            tools:layout_editor_absoluteX="213dp">        </ImageView>    </androidx.appcompat.widget.Toolbar>    <TextView        android:id="@+id/textViewPersonNameToSend"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginStart="15dp"        android:layout_marginTop="140dp"        android:text="Selected Person Phone  No. : "        android:textSize="13sp"        android:textStyle="bold"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent" />    <EditText        android:id="@+id/editTextNewPhoneNum"        android:layout_width="125dp"        android:layout_height="40dp"        android:layout_marginTop="162dp"        android:ems="10"        android:hint="Enter Phone No."        android:inputType="number|textPersonName|text"        android:textColor="#0E0E0E"        android:textSize="12sp"        android:textStyle="bold"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintHorizontal_bias="0.5"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent" />    <TextView        android:id="@+id/textView7"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginTop="70dp"        android:background="@drawable/button_shape_management"        android:paddingStart="30dp"        android:paddingEnd="30dp"        android:text="Send Reminder"        android:textColor="#0E0D0D"        android:textSize="22sp"        android:textStyle="bold"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintHorizontal_bias="0.5"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent" />    <TextView        android:id="@+id/textViewYourDetailHeading"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginStart="23dp"        android:layout_marginTop="324dp"        android:text="Fill Details Below To Get Notified Back"        android:textColor="#AA1515"        android:textSize="16sp"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintHorizontal_bias="0.5"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent" />    <TextView        android:id="@+id/textViewYourName"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginStart="25dp"        android:layout_marginTop="19dp"        android:text="Your Name :"        android:textSize="17sp"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toBottomOf="@+id/textViewYourDetailHeading" />    <TextView        android:id="@+id/textView11"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginStart="25dp"        android:layout_marginTop="25dp"        android:text="Your Phone No. :"        android:textSize="17sp"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toBottomOf="@+id/textViewYourName" />    <EditText        android:id="@+id/editTextYourName"        android:layout_width="155dp"        android:layout_height="wrap_content"        android:layout_marginStart="49dp"        android:layout_marginTop="7dp"        android:ems="10"        android:hint="Your Name"        android:inputType="textPersonName"        app:layout_constraintStart_toEndOf="@+id/textViewYourName"        app:layout_constraintTop_toBottomOf="@+id/textViewYourDetailHeading" />    <EditText        android:id="@+id/editTextYourPhoneNum"        android:layout_width="155dp"        android:layout_height="wrap_content"        android:layout_marginStart="11dp"        android:layout_marginTop="-1dp"        android:ems="10"        android:hint="Your Phone No."        android:inputType="phone"        app:layout_constraintStart_toEndOf="@+id/textView11"        app:layout_constraintTop_toBottomOf="@+id/editTextYourName" />    <Button        android:id="@+id/whatsApp"        android:layout_width="120dp"        android:layout_height="wrap_content"        android:layout_marginTop="480dp"        android:layout_marginEnd="80dp"        android:background="@drawable/inside_button_shape_management"        android:text="WhatsApp"        android:textColor="@drawable/button_color_management"        app:layout_constraintEnd_toStartOf="@+id/sms"        app:layout_constraintTop_toTopOf="parent" />    <Button        android:id="@+id/sms"        android:layout_width="115dp"        android:layout_height="wrap_content"        android:layout_marginStart="205dp"        android:layout_marginTop="480dp"        android:background="@drawable/inside_button_shape_management"        android:text="SMS"        android:textColor="@drawable/button_color_management"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintHorizontal_bias="0.5"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent" /></androidx.constraintlayout.widget.ConstraintLayout>