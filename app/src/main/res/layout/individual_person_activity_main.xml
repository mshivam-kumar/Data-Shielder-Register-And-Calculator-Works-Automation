<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.datahiveshield.mydata.mydairy.khata.files.MainActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_200"
        android:theme="@style/Theme.SQLiteDb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="0dp"
            android:text="@string/app_name"
            android:textSize="22sp"
            android:theme="@style/Theme.SQLiteDb">

        </TextView>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_logo"
            android:theme="@style/Theme.SQLiteDb"
            tools:layout_editor_absoluteX="213dp">

        </ImageView>

    </androidx.appcompat.widget.Toolbar>


    <Button
        android:id="@+id/tableView"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_marginTop="352dp"
        android:background="@drawable/inside_button_shape_management"
        android:text="Total View"
        android:textColor="@drawable/button_color_management"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/insertData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="276dp"
        android:background="@drawable/inside_button_shape_management"
        android:text="Insert"
        android:textColor="@drawable/button_color_management"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/update_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="276dp"
        android:background="@drawable/inside_button_shape_management"
        android:text="Update"
        android:textColor="@drawable/button_color_management"
        app:layout_constraintStart_toEndOf="@+id/insertData"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/delete_data"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="276dp"
        android:background="@drawable/inside_button_shape_management"
        android:text="DELETE"
        android:textColor="@drawable/button_color_management"
        app:layout_constraintStart_toEndOf="@+id/update_data"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/clearTableData"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="352dp"
        android:background="@drawable/inside_button_shape_management"
        android:text="Clear Saved Data"
        android:textColor="@drawable/button_color_management"
        app:layout_constraintStart_toEndOf="@+id/tableView"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/generatePdf"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="212dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/inside_button_shape_management"
        android:text="Send Reminder"
        android:textColor="@drawable/button_color_management"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.543"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/groupAccessed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="130dp"
        android:text="TextView"
        android:textColor="#6200EA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dataAccessed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="17sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/groupAccessed" />

    <Button
        android:id="@+id/share_pdf"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/inside_button_shape_management"
        android:text="Share"
        android:textColor="@drawable/button_color_management"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.398"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableView" />


</androidx.constraintlayout.widget.ConstraintLayout>